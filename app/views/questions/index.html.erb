<div class="jumbotron">
  <h1>Would you rather lather...?</h1>
</div>

<% @questions.order(created_at: :desc).each do |question| %>
  <div class="container">
    <ul>
      <h2><%= link_to question.title, question_path(question) %></h2>
     | <%= link_to "Edit", edit_question_path(question), id:"edit-question-button", remote: true %>
     | <%= link_to "Delete", question_path(question), data: { confirm: "Are you sure?", method: "delete" } %>
      <br>
      <li>
        <div id="voteA"> <h3><%=link_to question.optionA, question_path(question, vote: "A"), data: {method:"patch"} %></h3> </div>
      </li>
      <h4>OR</h4>
      <li>
        <div id="voteB"> <h3><%=link_to question.optionB, question_path(question, vote: "B"), data: {method:"patch"} %></h3> </div>
      </li>
    </ul>
    <div id="votes">
      Total votes : <%= question.optionA %> : <%= question.voteA %> | <%= question.optionB %> : <%= question.voteB %>
      <%= pie_chart Question.group(:voteA, :voteB).count %>
    </div>
    <br>
  </div>
<% end %>

<br><br>


<h4><%= link_to "Add a question", new_question_path, id:"new-question-button", remote: true %></h4>
