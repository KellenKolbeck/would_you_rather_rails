<div class="jumbotron">
  <h1>Would you rather lather...?</h1>
</div>

<% @questions.each do |question| %>
  <ul>
    <%= link_to question.title, question_path(question) %> | <%= link_to "Edit", edit_question_path(question), id:"edit-question-button", remote: true %>
   | <%= link_to "Delete", question_path(question), data: { confirm: "Are you sure?", method: "delete" } %>
    <br>
    <li>
      <div id="voteA"> <%=link_to question.optionA, question_path(question, vote: "A"), data: {method:"patch"} %> </div>
    </li>
    <li>
      <div id="voteB"> <%=link_to question.optionB, question_path(question, vote: "B"), data: {method:"patch"} %> </div>
    </li>
  </ul>
Total votes : <%= question.optionA %> : <%= question.voteA %> | <%= question.optionB %> : <%= question.voteB %>
<% end %>

<br><br>


<%= link_to "Add a question", new_question_path, id:"new-question-button", remote: true %>
