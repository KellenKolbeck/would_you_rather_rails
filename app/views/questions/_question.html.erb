<div class="container">
  <ul>
    <h2><%= link_to question.title, question_path(question) %></h2>
   | <%= link_to "Edit", edit_question_path(question), id:"edit-question-button", remote: true %>
   | <%= link_to "Delete", question_path(question), data: { confirm: "Are you sure?", method: "delete" } %>
    <br>
    <li>
      <div> <h3><%=link_to question.optionA, question_path(question, vote: "A"), data: {method:"patch"}, id:"vote_a", remote: true %></h3> </div>
    </li>
    <h4>OR</h4>
    <li>
      <div id="vote_b"> <h3><%=link_to question.optionB, question_path(question, vote: "B"), data: {method:"patch"} %></h3> </div>
    </li>
  </ul>
  <div id="votes">
    Total votes : <%= question.optionA %> : <%= question.vote_a %> | <%= question.optionB %> : <%= question.vote_b %>
  </div>
  <br>
</div>
